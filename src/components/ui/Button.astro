---
// src/components/ui/Button.astro
interface Props {
  type?: 'submit' | 'button' | 'reset';
  variant?: 'primary' | 'secondary';
  fullWidth?: boolean;
}

const { type = 'button', variant = 'primary', fullWidth = false } = Astro.props;

const variantClasses = {
  primary: 'bg-blue-500 text-white hover:bg-blue-600 focus:ring-blue-500',
  secondary: 'bg-gray-200 text-gray-800 hover:bg-gray-300 focus:ring-gray-400',
};

const widthClass = fullWidth ? 'w-full' : '';
---

<button
  type={type}
  class={`${widthClass} rounded-lg ${variantClasses[variant]} px-6 py-3 font-semibold transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2`}
>
  <slot />
</button>
