---
// src/components/ui/Link.astro
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
}

const { href, variant = 'primary' } = Astro.props;

const variantClasses = {
  primary: 'text-blue-500 hover:text-blue-600',
  secondary: 'text-gray-600 hover:text-gray-800',
};
---

<a href={href} class={`${variantClasses[variant]} hover:underline transition-colors`}>
  <slot />
</a>
